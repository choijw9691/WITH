<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coment_detatil_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/item_boarder"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/coment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:hint="이름"

            />

        <Button

            android:id="@+id/comment_modify"
            android:layout_width="60dp"
            android:layout_height="30dp"

            android:layout_marginRight="5dp"


            android:background="@drawable/notice_board_edit"
            android:text="수정"
            android:textColor="	#717171"
            android:textSize="10dp"


            >


        </Button>

        <Button
            android:id="@+id/comment_delete"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/notice_board_edit"
            android:textColor="	#717171"
            android:textSize="10dp"
            android:text="삭제">


        </Button>


        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:visibility="gone"
            >


        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/coment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="내용"></EditText>

        <Button
            android:id="@+id/comment_modify_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송"
            android:visibility="invisible"></Button>

    </LinearLayout>
</LinearLayout>